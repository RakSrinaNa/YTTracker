{
  "manifest_version": 2,

  "name": "YouTube Tracker Beta",
  "short_name": "YTTrackerBeta",
  "description": "This extension will track your time on YouTube",
  "version": "1.2.5",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "author": "MrCraftCod",
  "homepage_url": "https://github.com/MrCraftCod/YTTracker",

  "permissions": [
    "https://www.youtube.com/*",
    "https://yttracker.mrcraftcod.fr/*",
    "storage",
    "downloads"
  ],

  "options_page": "chart.html",

  "browser_action": {
    "default_icon": "assets/icon128.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["js/lib/jquery/jquery.js", "js/YTTUtils.js", "js/content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],

  "background": {
    "scripts": ["js/lib/jquery/jquery.js", "js/YTTUtils.js", "js/background.js"]
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "web_accessible_resources": ["js/YTTUtils.js", "js/hookerUtils.js", "js/hooker.js"]
}
